


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', { page: '/' }) %>

  <section class="container mx-auto px-4 py-10">
    <div class="hero bg-base-200 rounded-2xl">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-5xl font-bold">Explore Climate Projects</h1>
          <p class="py-6 text-lg">Browse projects by sector and view details.</p>
          <a class="btn btn-primary" href="/solutions/projects">Browse all projects</a>
        </div>
      </div>
    </div>

    <!-- exactly one card per sector -->
    <div class="grid md:grid-cols-3 gap-6 mt-10">
      <% featured.forEach(p => { %>
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-200">
        <figure>
          <img src="<%= p.feature_img_url %>" alt="<%= p.title %>" class="h-48 w-full object-cover rounded-t-xl" />
        </figure>
        <div class="card-body">
          <div class="badge badge-outline w-fit"><%= p.sector %></div>
          <h2 class="card-title mt-2"><%= p.title %></h2>
          <p><%= p.summary_short %></p>
          <div class="card-actions justify-between items-center mt-3">
            <a class="link link-primary" href="/solutions/projects?sector=<%= encodeURIComponent(p.sector) %>">
              View sector projects â†’
            </a>
            <a class="btn btn-outline btn-sm" href="/solutions/projects/<%= p.id %>">Details</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</body>
</html>

